    <% @issuers.each do |issuer| %>
		<% issuer.batches.each do |batch| %>
	    <!-- Page Heading/Breadcrumbs -->
	    <div class="row">
			 <div class="col-lg-2">
        		<%= issuer.name %>
			</div>
			<div class="col-lg-2">
				<a href="<%= "#{search_batch_path(batch)}" %> "><%= batch.title %></a>
			</div>
			<div class="col-lg-2">
        		<%= batch.deeds.count %>
			</div>
			<div class="col-lg-2">
				<% first_block = first_block(batch.payment_address) %>
				<% if first_block.to_i < 840000 and first_block.to_i > 0 %>
        			<%= first_block %>
				<% else %>
					N/A
				<% end %>
			</div>
			<div class="col-lg-4">
        		<%= batch.payment_address %>
			</div>
	  	</div>
		<% end %>
    <% end %>


