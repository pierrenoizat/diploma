<!-- Page Content -->
<div class="container">
       
<h1>Schools</h1>

<div class="row">
	 <div class="col-lg-2">
		<strong>School Name
	</div>
	<div class="col-lg-2">
		Class Year
	</div>
	<div class="col-lg-2">
		Diplomas Count
	</div>
	<div class="col-lg-2">
		<span data-toggle="tooltip" data-placement="top" title="Height of Block where registered address first appears as a transaction input.">Block</span>
	</div>
