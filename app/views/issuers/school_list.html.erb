<p id="notice"><%= notice %></p>
<!-- Page Content -->
<div class="container">
       
<h1>Schools</h1>
</br>
<table class="table table-bordered">
	<th>
	  <td><strong>School Name</strong></td>
	  <td><strong>Class Year</strong></td>
	  <td><strong>Diplomas Count</strong></td>
	  <td><strong><span data-toggle="tooltip" data-placement="top" title="Height of Block where registered address first appears as a transaction input.">Block</span></strong></td>
	  <td><span data-toggle="tooltip" data-placement="top" title="Look for this address in a transaction input of the Block."><strong>Registered School Address</strong></span></td>
	</th>
<% @batches.each do |batch| %>
	<tr>
	  <td>	<%= link_to batch.school_url, :target => "_blank" do %>
            <div class="fill" style="background-image" ><%= image_tag batch.issuer.small_logo_path %></div>
          <% end %></td>
	  <td><%= batch.issuer.name %></td>
	  <td><a href="<%= "#{search_batch_path(batch)}" %> "><%= batch.title %></a></td>
	  <td><%= batch.deeds.count %></td>
	  <td>
		<% if batch.first_block %>
			<%= batch.first_block %>
		<% else %>
			N/A
		<% end %></td>
	  <td><a href='<%= batch.address_url %>' target="_blank"><%= batch.payment_address %></a></td>
	</tr>
	<% end %>
</table>
</br></br></br></br></br></br>
    <script type="text/javascript">

    $(document).ready(function(){

        $('[data-toggle="tooltip"]').tooltip();   

    });

    </script>

