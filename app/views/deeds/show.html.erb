<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @deed.name %>
                <small><%= @deed.avatar_file_name %></small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %></li>
				<li><%= link_to "#{current_user.name}", current_user %></li>
                <li class="active"><%= @deed.category.titleize %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-4">
			<%= image_tag @deed.avatar.url %>
        </div>

        <div class="col-md-8">
            <h3><%= @deed.category.titleize %>:<%= @deed.issuer %></h3>
            <p><%= @deed.description %></p>
            <h3>Deed Details</h3></br>
            <ul>
				<li>File SHA256 Fingerprint: <%= @deed.upload %></li></br>
				<% unless @deed.tx_hash.blank? %>
					<li>OP_RETURN Tx ID: <a href="<%= "https://live.blockcypher.com/btc/tx/#{@deed.tx_hash}/" %>"  target="blank"><%= @deed.tx_hash %></a></li></br>
				<% end %>
            </ul></br></br>
			<p><a class="btn btn-default btn-xs btn-success" href="<%= "#{download_deed_path(@deed)}" %> "><i class="fa fa-download"></i> Download</a> <% if @deed.tx_hash.blank? %> <%= link_to "Log hash in Blockchain", log_hash_deed_path(@deed), :class => 'btn btn-default btn-xs btn-success' %> <% end %> <%= link_to "Edit", edit_deed_path(@deed), :class => 'btn btn-default btn-xs btn-success' %> <%= link_to "Delete", deed_path(@deed), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-default btn-xs btn-danger' %></p>
        </div>

    </div>
    <!-- /.row -->
	<hr>
	<!-- Viewers Row -->
	<div class="row">
		<table>
		  <thead>
		    <tr>
		      <th>Authorized viewers email:</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @deed.viewers.each do |viewer| %>
		      <tr>
		        <td><%= viewer.email %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
	<!-- /.row -->

	<!-- New Viewer Form Row -->
	<div class="row">
	<%= form_for([@deed, @deed.viewers.build]) do |f| %>
	<table class="table table-striped">
		<thead>
		    <tr>
		      <th></th>
		      <th></th>
		      <th></th>
		    </tr>
		  </thead>
	  <tbody>
		<tr>
	    	<td><%= f.text_field :email, :style => "width:520px;" , :placeholder => "email" %></td>
			<td><%= f.hidden_field :deed_id, :value => @deed.id %></td>
			<td><%= button_to 'Add Viewer', :controller => "viewers", :action => "create", :method => :post, :class => 'btn btn-default btn-xs' %></td>
		</tr>
		  </tbody>
		</table>
	<% end %>
	</div>
    <!-- /.row -->

</div>
<!-- /.container -->
