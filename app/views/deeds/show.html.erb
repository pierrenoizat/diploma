<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @deed.name %>
                <small><%= @deed.avatar_file_name %></small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %></li>
				<li><%= link_to "#{current_user.name}", current_user %></li>
                <li class="active"><%= @deed.category.titleize %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
			<%= image_tag @deed.avatar.url %>
        </div>

        <div class="col-md-4">
            <h3><%= @deed.category.titleize %>:<%= @deed.issuer %></h3>
            <p><%= @deed.description %></p>
            <h3>Deed Details</h3>
            <ul>
				<li>S3 File SHA256 Fingerprint: <%= @deed.upload %></li>
				<% unless @deed.tx_hash.blank? %>
                	<li>OP_RETURN Tx ID: <%= @deed.tx_hash %></li>
				<% end %>
            </ul>
			<p><a class="btn btn-default btn-xs btn-success" href="<%= "#{download_deed_path(@deed)}" %> "><i class="fa fa-download"></i> Download</a> <% if @deed.tx_hash.blank? %> <%= link_to "Log hash in Blockchain", log_hash_deed_path(@deed), :class => 'btn btn-default btn-xs btn-success' %> <% end %> <%= link_to "Edit", edit_deed_path(@deed), :class => 'btn btn-default btn-xs btn-success' %> <%= link_to "Delete", deed_path(@deed), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-default btn-xs btn-danger' %></p>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
