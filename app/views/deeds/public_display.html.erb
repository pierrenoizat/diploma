<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @deed.name %>
                <small><%= @deed.avatar_file_name %></small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %></li>
                <li class="active"><%= @deed.category.titleize %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-4">
			<%= image_tag @deed.avatar.url %>
        </div>

        <div class="col-md-8">
            <h3><%= @deed.category.titleize %>:<%= Issuer.find_by_id(@deed.issuer_id).name if Issuer.find_by_id(@deed.issuer_id) %></h3>
            <p><%= @deed.description %></p>
            <h3>Deed Details</h3></br>
            <ul>
				<li>File SHA256 Fingerprint: <%= @deed.upload %></li></br>
				<% if @deed.batch %>
					<li>Diploma Report File SHA256 Fingerprint: <%= @deed.batch.root_hash %></li></br>
					<li>Diploma Report OP_RETURN Tx ID: <a href="<%= tx_link(@deed.batch.tx_hash) %>"  target="blank"><%= @deed.batch.tx_hash %></a></li></br>
				<% else %>
					<% unless @deed.tx_hash.blank? %>
						<li>OP_RETURN Tx ID: <a href="<%= tx_link(@deed.tx_hash) %>"  target="blank"><%= @deed.tx_hash %></a></li></br>
					<% end %>
				<% end %>
            </ul></br></br>
			<p>
			<a class="btn btn-default btn-xs btn-success" href="<%= "#{download_deed_path(@deed)}" %> "><i class="fa fa-download"></i> Download</a>
			<% if @deed.batch %><a class="btn btn-default btn-xs btn" href="<%= "#{download_report_deed_path(@deed)}" %> "><i class="fa fa-download"></i>Download Diploma Report</a><% end %>
			</p>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
