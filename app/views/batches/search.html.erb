<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Batch: 
				<small><%= @issuer.name %>, <%= @batch.title %></small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %></li>
				<li><%= link_to 'Batches', school_list_issuers_path %></li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
	
	<p>
	  <strong>Batch Address:</strong>
	  <%= @batch.payment_address %>
	</p>
	
	<p>
	  <strong>Diploma Count:</strong>
	  <%= @batch.deeds.count %>
	</p>

	<p><h4>Search for your diploma page with your diploma file SHA256 hash: </h4>

	<%= form_tag(deeds_path, :method => "get", id: "search-form") do %>
	  <%= text_field_tag :search, params[:search], placeholder: "0adfc78a9899c2194ca2ecc5237a10d1ee7eb3d7974a8f84bdbb5e222320413e", style: "width:550px;" %>
	  <%= hidden_field :batch_id, params[:batch_id], value: @batch.id %>
	  <%= submit_tag "Search", :name => nil, :class => "btn btn-default btn-xs btn-success" %>
	<% end %></p>
	
	<div class="row">
        <div class="col-lg-12">

				<form id="upload_form" style="display: none;" method="POST" enctype="multipart/form-data" action="api/document/upload">
		          <fieldset>
		            <input id='file' type="file" name="d" />
		            <button id="upload_submit" style="display: none;" type="submit" class="btn btn-success"></button>
		          </fieldset>
		        </form>

		        <div id="filedrag" style="display: none;" class="dropbox">
					<p>Compute the SHA256 hash of any file:</br>
		          		Click <strong>HERE</strong> to select the file in your computer hard drive.</br></br>
		          		The file will NOT be uploaded. The file hash computation is performed client-side.</br></p>
		        </div>

		        <div id="explain"></div>
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
