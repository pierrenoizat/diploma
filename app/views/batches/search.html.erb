<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Class: 
				<small><%= @issuer.name %>, <%= @batch.title %></small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
	<div class="row">
        <div class="col-lg-12">
	<p>
	  <strong>School's Address:</strong>
	  <%= @batch.payment_address %>
	</p>
	
	<p>
	  <strong>Diploma Count:</strong>
	  <%= @batch.deeds.count %>
	</p>
	</div>
	</div>
	<div class="row">
        <div class="col-lg-8">
	<!-- Blog Search Well -->
    <div class="well">
        <h4>Search diplomas by name:</h4>
	<%= form_tag(deeds_path, :method => "get", id: "search-form") do %>
	<div class="input-group">
	  <label for="first-name">First Name*:</label><%= text_field_tag :first, params[:first], placeholder: "John", id: "first-name", style: "width:200px;height:30px;" %>
	<label for="last-name">Last Name*:</label><%= text_field_tag :last, params[:last], placeholder: "DOE", id: "last-name", style: "width:200px;height:30px;" %>
	
	  <%= hidden_field :batch_id, params[:batch_id], value: @batch.id %>
	<button class="btn btn-default btn-info" type="submit"><i class="fa fa-search"></i> Search</button>

	<% end %>
	
	</div><!-- /.input-group -->
	<p></p>
	<p>First name must be in lower case (e.g. "John") and last name in upper case (e.g. "DOE").</p>
    </div>
	
    <div class="well">
        <h4>Search diplomas by file digest:</h4>
	<%= form_tag(deeds_path, :method => "get", id: "search-form") do %>
	<div class="input-group">
	<label for="access-key">Digest*:</label><%= text_field_tag :upload, params[:upload], placeholder: "a4e2a52b0568a66049ae3ff3539ab35b77e45de2100af9d802da145b6ba33abb", id: "access-key", style: "width:500px;height:30px;" %>
	
	  <%= hidden_field :batch_id, params[:batch_id], value: @batch.id %>
	<button class="btn btn-default btn-info" type="submit"><i class="fa fa-search"></i> Search</button>

	<% end %>
	
	</div><!-- /.input-group -->
	<p></p>
	<form id="upload_form" style="display: none;" method="POST" enctype="multipart/form-data" action="api/document/upload">
      <fieldset>
        <input id='file' type="file" name="d" />
        <button id="upload_submit" style="display: none;" type="submit" class="btn btn-success"></button>
      </fieldset>
    </form>

    <div id="filedrag" style="display: none;" class="dropbox">
		If you don't know your diploma digest:</br>
      		Click <strong>HERE</strong> to select your diploma pdf file in your computer hard drive.
    </div>
	<strong><div id="explain"></div></strong>
    </div>
	
	</div>
	<div class="col-lg-4">
	</div>

</div>
<!-- /.container -->
