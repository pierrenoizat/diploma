<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Class: 
				<small><%= @issuer.name %>, <%= @batch.title %></small>
            </h1>
        </div>
    </div>
    <!-- /.row -->
	<div class="row">
        <div class="col-lg-12">
	<p>
	  <strong>School's Address:</strong>
	  <%= @batch.payment_address %>
	</p>
	
	<p>
	  <strong>Diploma Count:</strong>
	  <%= @batch.deeds.count %>
	</p>
	</div>
	</div>
	<div class="row">
        <div class="col-lg-8">
	<!-- Blog Search Well -->
    <div class="well">
        <h4>Search for your diploma page:</h4>

	<%= form_tag(deeds_path, :method => "get", id: "search-form") do %>
	<div class="input-group">
	  <label for="first-name">First Name*:</label><%= text_field_tag :first, params[:first], placeholder: "John", id: "first-name", style: "width:200px;height:30px;" %>
	<label for="last-name">Last Name*:</label><%= text_field_tag :last, params[:last], placeholder: "DOE", id: "last-name", style: "width:200px;height:30px;" %>
	
	  <%= hidden_field :batch_id, params[:batch_id], value: @batch.id %>
	<button class="btn btn-default btn-info" type="submit"><i class="fa fa-search"></i> Search</button>

	<% end %>
	</div><!-- /.input-group -->
    </div>
	</div>
	<div class="col-lg-4">
	</div>
</div>

</div>
<!-- /.container -->
