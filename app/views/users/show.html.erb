<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @user.name %>
                <small>Account</small>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %>
                </li>
                <li class="active">Your Deeds</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

	<% @deeds.each do |deed| %>

    <div class="row">
        <div class="col-md-7">
			<%= link_to deed do %>
			  <%= image_tag deed.avatar.url(:medium), class: 'img-responsive img-hover' %>
            <% end %>
        </div>
        <div class="col-md-5">
            <h3><%= deed.name %></h3>
            <h4><%= deed.category.titleize %>: <%= deed.issuer %></h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p>
            <%= link_to 'View Deed', deed, class: 'btn btn-primary' %>
        </div>
    </div>
    <!-- /.row -->

	<hr>

	<% end %>
	<%= link_to "Upload a New Deed", new_deed_path, :class => 'btn btn-lg btn-default btn-block'  %>

    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
			<div class="digg_pagination">
				<%= will_paginate @deeds, :page_links => false %>
			</div>
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
