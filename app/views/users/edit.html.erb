<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @user.name %>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %></li>
				<li><%= link_to "#{current_user.name}", current_user %></li>
                <li class="active">Edit</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
            <p><%= link_to pluralize(@user.deeds.count, "Deed"), @user %>.</p>
			<%= simple_form_for @user, url: user_path(@user), method: :patch do |f| %>
			<%= f.error_notification %>
			  <div class="form-inputs">
				<%= f.select :category, User.categories.keys.map {|category| [category.titleize,category]} %>
			  </div></br>
			  <div class="form-inputs">
			    <%= f.input :name, :label => 'Name' %>
				
				<% if @user.email.blank? %>
					<%= f.input :email %>
				<% else %>
					<%= f.input :email, disabled: true %>
				<% end %>
				<%= f.input :uid, disabled: true %>
				<%= f.input :credit, :label => 'Credit' %>
			  </div>
			
			  <div class="form-actions">
			    <%= f.button :submit %>   <%= link_to 'Cancel', @user, :class => 'btn btn-default' %>
			  </div>
			<% end %>
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
