<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @user.name %>
            </h1>
            <ol class="breadcrumb">
                <li><%= link_to 'Home', root_path %></li>
				<li><%= link_to "Users", users_path %></li>
                <li class="active">Account Profile</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">
            <p><%= link_to pluralize(@user.deeds.count, "Deed"), @user %>.</p>
				<div>
				<span><strong>Category: </strong></span><%= @user.category %>
			  	</div></br>
			  	<div>
				<span><strong>Issuer: </strong></span>
					<%= @issuer.name if @issuer %><br /><br />
				</div>
				<div>
				<span><strong>Email: </strong></span>
				<%= @user.email %><br /><br />
				</div>
				<div>
				<span><strong>uid: </strong></span>
					<%= @user.uid %><br /><br />
				<span><strong>Credit: </strong></span>
					<%= @user.credit %><br /><br />
				</div>
			  </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
